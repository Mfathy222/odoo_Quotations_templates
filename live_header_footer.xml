        </table>
        <!-- عنوان Quotation / عرض سعر -->
        <div class="ss-line"/>
        <table class="dd-line" style="width:100%; font-weight:bold; font-size:16px; border:none !important; ">
    <tr>
        <!-- العمود الأيسر: عنوان إنجليزي -->
        <td>
            <t t-if="is_proforma">
                Pro-Forma Invoice
            </t>
            <t t-else="">
                <t t-if="o and o._name == 'sale.order'">
                    <t t-if="o.state in ('draft', 'sent')">
                        Quotation
                    </t>
                    <t t-else="">
                        Sales Order
                    </t>
                </t>

                <t t-if="o and o._name == 'account.move'">
                    <t t-if="o.move_type in ('out_invoice', 'out_refund')">
                        Invoice
                    </t>
                    <t t-else="">
                        <t t-if="o.move_type in ('in_invoice', 'in_refund')">
                            Bill
                        </t>
                        <t t-else="">
                            Journal Entry
                        </t>
                    </t>
                </t>

                <t t-if="o and o._name == 'purchase.order'">
                    <t t-if="o.state in ('draft', 'sent')">
                        Request for Quotation
                    </t>
                    <t t-else="">
                        Purchase Order
                    </t>
                </t>

                <t t-if="o and o._name == 'stock.picking'">
                    <t t-if="o.picking_type_code == 'outgoing'">
                        Delivery note
                    </t>
                    <t t-else="">
                        <t t-if="o.picking_type_code == 'incoming'">
                            Receipt
                        </t>
                        <t t-else="">
                            Transfer
                        </t>
                    </t>
                </t>

                <t t-if="o and o._name not in ('sale.order', 'account.move', 'purchase.order', 'stock.picking')">
                    <span t-esc="o._description or ''"/>
                </t>
            </t>
        </td>

        <!-- العمود الأوسط: رقم المستند -->
        <td style="text-align:center;">
            <span t-esc="o and o.name or ''"/>
        </td>

        <!-- العمود الأيمن: عنوان عربي -->
        <td style="text-align:right; direction:rtl;">
            <t t-if="is_proforma">
                فاتورة اولية
            </t>
            <t t-else="">
                <t t-if="o and o._name == 'sale.order'">
                    <t t-if="o.state in ('draft', 'sent')">
                        عرض سعر
                    </t>
                    <t t-else="">
                        امر بيع
                    </t>
                </t>

                <t t-if="o and o._name == 'account.move'">
                    <t t-if="o.move_type in ('out_invoice', 'out_refund')">
                        فاتورة
                    </t>
                    <t t-else="">
                        <t t-if="o.move_type in ('in_invoice', 'in_refund')">
                            فاتورة
                        </t>
                        <t t-else="">
                            دفتر اليومية
                        </t>
                    </t>
                </t>

                <t t-if="o and o._name == 'purchase.order'">
                    <t t-if="o.state in ('draft', 'sent')">
                        طلب شراء
                    </t>
                    <t t-else="">
                        أمر شراء
                    </t>
                </t>

                <t t-if="o and o._name == 'stock.picking'">
                    <t t-if="o.picking_type_code == 'outgoing'">
                        طلب توصيل
                    </t>
                    <t t-else="">
                        <t t-if="o.picking_type_code == 'incoming'">
                            إيصال
                        </t>
                        <t t-else="">
                            تحويل
                        </t>
                    </t>
                </t>

                <t t-if="o and o._name not in ('sale.order', 'account.move', 'purchase.order', 'stock.picking')">
                    <span t-esc="o._description or ''"/>
                </t>
            </t>
        </td>
    </tr>
</table>

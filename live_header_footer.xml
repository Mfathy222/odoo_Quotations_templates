        <table class="ss-header-table" style="border:none !important;">
            <tr style="border:none !important;">
                <td style="width:40%; text-align:left; vertical-align:top; border:none !important;">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="width:150px; height:95px;"/>
                </td>
                <td style="width:50%; vertical-align:top; border:none !important;">
                    <table style="width:100%; border-collapse:collapse; border:none !important;">
                        <tr style="border:none !important;">
                            <td style="text-align:left; font-weight:bold; border:none !important;">
                            VAT ID:
                        </td>
                            <td style="text-align:center; direction:rtl; font-weight:bold; border:none !important;">
                                <span t-esc="company.vat"/>
                            </td>
                            <td style="text-align:right; direction:rtl; font-weight:bold; border:none !important;">
                         الرقم الضريبى :
                        </td>
                        </tr>
                        <tr style="border:none !important;">
                            <td style="padding-top:6px; font-weight:bold; border:none !important;">
                            Date:
                        </td>
                            <td style="text-align:center; direction:rtl; font-weight:bold; border:none !important;">
                                <t t-if="o and 'date_order' in o._fields">
                                    <span t-field="o.date_order" t-options="{'widget': 'date'}"/>
                                </t>
                                <t t-elif="o and 'invoice_date' in o._fields">
                                    <span t-field="o.invoice_date" t-options="{'widget': 'date'}"/>
                                </t>
                                <t t-elif="o and 'date' in o._fields">
                                    <span t-field="o.date" t-options="{'widget': 'date'}"/>
                                </t>
                                <t t-else="">
                                    <span/>
                                </t>
                            </td>
                            <td style="padding-top:6px; text-align:right; direction:rtl; font-weight:bold; border:none !important;">
                                <span>
                                التـــاريخ :
                            </span>
                            </td>
                        </tr>
                        <tr t-if="o and 'validity_date' in o._fields" style="border:none !important;">
                            <td style="font-weight:bold; border:none !important;">
                            Offer Validity:
                        </td>
                            <td style="text-align:center; direction:rtl; font-weight:bold; border:none !important;">
                                <span t-esc="(o and o.validity_date and o.validity_date) or ''"/>
                            </td>
                            <td style="text-align:right; direction:rtl; font-weight:bold; border:none !important;">
                                <span>
                                صالح لغاية :
                            </span>
                            </td>
                        </tr>
                        <tr t-if="o and 'x_studio_sales_person' in o._fields" style="border:none !important;">
                            <td style="font-weight:bold; border:none !important;">
                            Sales Person:
                            </td>
                            <td style="text-align:center; direction:rtl; font-weight:bold; border:none !important;">
                                <span t-esc="(o.x_studio_sales_person_1 and o.x_studio_sales_person_1.name) or ''"/>
                            </td>
                            <td style="text-align:right; direction:rtl; font-weight:bold; border:none !important;">
                                <span>البـــائــع :</span>
